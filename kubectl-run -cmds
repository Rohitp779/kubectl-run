kubectl apply -f pod.yaml

kubectl get pods

kubectl get pods -o wide

minikube ssh

curl -L http://10.244.0.3:8000   ---(( Change the ip address of pod running) 

kubectl delete pod (pod-name)        --- ( for deletion of pod container )

